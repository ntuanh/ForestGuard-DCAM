<UserControl x:Class="WinApp.Views.Migrate.CodeViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinApp.Views.Migrate"
             xmlns:vst="clr-namespace:Vst.Controls"
             mc:Ignorable="d" 
             Margin="10"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="Paragraph">
            <Setter Property="Margin" Value="0" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border Background="#C0624BFF">
            <StackPanel Orientation="Horizontal" 
                        VerticalAlignment="Center">
                <vst:Button Background="Orange"
                            Foreground="#FFF"
                            VerticalAlignment="Center"
                            Width="50"
                            Cursor="Hand"
                            Margin="10 0"
                            Padding="3"
                            BorderRadius="6"
                            Text="copy"
                            x:Name="CopyButton"/>
                <TextBlock Foreground="#FFF"
                       Text="title"
                           FontSize="16"
                       x:Name="Title" />
            </StackPanel>
        </Border>
        <Border Grid.Row="1">
            <RichTextBox FontFamily="Consolas"
                         Padding="10"
                         x:Name="Body">
            </RichTextBox>
        </Border>
    </Grid>
</UserControl>
