<UserControl x:Class="WinApp.Views.Migrate.MigrateLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinApp.Views.Migrate"
             xmlns:vst="clr-namespace:Vst.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="7*" />
        </Grid.ColumnDefinitions>
        <GridSplitter Grid.Column="1" 
                      Background="LightGray"
                      HorizontalAlignment="Stretch" />
        <vst:VerticalMenu x:Name="ItemsMenu"
                          Background="#20624BFF">
        </vst:VerticalMenu>
        <Border x:Name="Body" Grid.Column="2"></Border>
    </Grid>
</UserControl>
