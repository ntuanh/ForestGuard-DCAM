<UserControl x:Class="WinApp.Views.HanhChinh.DonViSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinApp.Views.HanhChinh"
             xmlns:vst="clr-namespace:Vst.Controls"
             mc:Ignorable="d" 
             Margin="4"
             BorderBrush="#CCC"
             BorderThickness="1"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="local:DonViItemView">
            <Setter Property="Foreground" Value="#111" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#FFF" />
                    <Setter Property="Background" Value="#80624BFF" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="vst:MenuButton">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F80" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border Background="#624BFF">
            <TextBlock x:Name="Title"
                       Margin="10"
                       VerticalAlignment="Center"
                       FontSize="14"
                       Foreground="#FFF" />
        </Border>
        <vst:MenuButton HorizontalAlignment="Right"
                        Margin="10"
                        Padding="10 0"
                        Text="Thêm"
                        FontSize="10"
                        BorderBrush="#FFF"
                        BorderThickness="1"
                        BorderRadius="4"
                        Foreground="#FFF"
                        x:Name="AddNewButton" />
        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
            <StackPanel x:Name="Body">
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
